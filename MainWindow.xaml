<Window
    x:Class="RadioParadisePlayer.MainWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:RadioParadisePlayer"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d">

    <NavigationView x:Name="navigationView" IsSettingsVisible="True" PaneDisplayMode="LeftCompact"
                    SelectionChanged="navigationView_SelectionChanged">
        <NavigationView.MenuItems>
            <NavigationViewItem Icon="Play" Content="Play" />
        </NavigationView.MenuItems>
        <Grid>
            <Image x:Name="imgSlideshowOne" Stretch="UniformToFill" Source="{x:Bind BitmapImageSlideshowOne}">
                <Image.OpacityTransition>
                    <ScalarTransition Duration="00:00:02" />
                </Image.OpacityTransition>
            </Image>
            <Image x:Name="imgSlideshowTwo" Opacity="0" Stretch="UniformToFill" Source="{x:Bind BitmapImageSlideshowTwo}" >
                <Image.OpacityTransition>
                    <ScalarTransition Duration="00:00:02" />
                </Image.OpacityTransition>
            </Image>
            <ProgressRing x:Name="progressRing" IsActive="false" Visibility="Collapsed"/>
        </Grid>
    </NavigationView>
</Window>
